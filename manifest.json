{
  "manifest_version": 2,
  "name": "Igloo",
  "version": "1.0",
  "description": "news and to do lists to keep you informed and focused",
  "icons": {
  	"128": "igloo-icon-128.png"
  },
  // Optional
  "author": "Shiv Sakhuja",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage"
  ]
}
